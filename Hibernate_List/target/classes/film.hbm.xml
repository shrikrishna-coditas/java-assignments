<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.bean.Film" table="Film_details">
        <id name="id">
            <generator class="assigned"></generator>
        </id>
        <property name="name"/>

        <list name="songs" cascade="all">
            <key column="parent_id"/>
            <index column="songs"/>
            <one-to-many class="com.bean.Songs"/>
        </list>
    </class>
    <class name="com.bean.Songs" table="Song_Details">
        <id name="id">
            <generator class="assigned"></generator>
        </id>
        <property name="name"/>
    </class>
</hibernate-mapping>